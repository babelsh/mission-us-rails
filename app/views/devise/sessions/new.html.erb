<div class="container d-flex justify-content-center">
  <div class="align-self-center">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center">Missão Nós</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email,
              class: 'form-control defaultInput',
              autofocus: true,
              autocomplete: 'email',
              placeholder: 'Email'
            %>
          </div>

          <div class="field">
            <%= f.password_field :password,
              class: 'form-control defaultInput',
              autocomplete: 'off',
              placeholder: 'Senha'
            %>
          </div>


          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit 'Log in', class: 'btn bg-primary text-light w-100 mb-0' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
